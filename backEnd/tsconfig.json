  {
    "compilerOptions": {
      // File Layout
      "rootDir": "./src",
      "outDir": "./dist",

      // Environment Settings
      "module": "NodeNext",
      "target": "ES2022",
      "types": ["node"],

      // Outputs
      "sourceMap": true,

      // Stricter Typechecking Options
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,

      // Module/Interop
      "esModuleInterop": true,
      "verbatimModuleSyntax": true,
      "isolatedModules": true,
      "moduleDetection": "force",
      "skipLibCheck": true,

      // Allow TS to find .ts files as modules
      "resolveJsonModule": true
    },

    // âœ… ESSENCIAL PARA ES MODULES COM ts-node
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    },

    "include": ["src"]
  }
