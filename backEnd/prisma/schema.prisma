generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int       @id @default(autoincrement())
  nomeCompleto String
  email        String    @unique
  senha        String
  telefone     String
  cpf          String    @unique
  tipoDaConta  Role
  empresaId    Int
  servico      Servico[]
  empresa      Empresa   @relation(fields: [empresaId], references: [id])
}

enum TipoFinanceiro {
  ENTRADA
  SAIDA
}

enum FormaPagamento {
  PIX
  DINHEIRO
  CARTAO
}

model GestaoFinanceira {
  id               Int            @id @default(autoincrement())
  descricao        String
  data             DateTime       @default(now())
  hora             String
  formaDePagamento FormaPagamento
  valor            Float
  tipo             TipoFinanceiro

  categoriaId Int?
  categoria   Categoria? @relation(fields: [categoriaId], references: [id])

  colaboradorId Int?
  colaborador   Colaborador? @relation(fields: [colaboradorId], references: [id])

  servicoAssociadoId Int?
  servicoAssociado   Servico? @relation(fields: [servicoAssociadoId], references: [id])

  empresaId Int
  empresa   Empresa @relation(fields: [empresaId], references: [id])
}

model Categoria {
  id               Int                @id @default(autoincrement())
  nomeCategoria    String
  gestaoFinanceira GestaoFinanceira[]
  empresaId        Int
  empresa          Empresa            @relation(fields: [empresaId], references: [id])
}

model Servico {
  id               Int                @id @default(autoincrement())
  tipoDoServico    String
  valorDoServico   Float
  data             DateTime
  hora             String
  empresaId        Int
  usuarioId        Int
  colaboradorId    Int
  gestaoFinanceira GestaoFinanceira[]
  colaborador      Colaborador        @relation(fields: [colaboradorId], references: [id])
  empresa          Empresa            @relation(fields: [empresaId], references: [id])
  usuario          Usuario            @relation(fields: [usuarioId], references: [id])
  servicoConfigId  Int?
  servicoConfig    ServicoConfig?     @relation(fields: [servicoConfigId], references: [id])
}

model Empresa {
  id               Int                @id @default(autoincrement())
  nomeDaEmpresa    String             @unique
  cnpj             String             @unique
  email            String
  telefone         String
  endereco         String
  clietes          Cliente[]
  colaboradores    Colaborador[]
  servico          Servico[]
  usuarios         Usuario[]
  gestaoFinanceira GestaoFinanceira[]
  categorias       Categoria[]
  ServicoConfig    ServicoConfig[]
}

model Cliente {
  id          Int     @id @default(autoincrement())
  nomeCliente String
  email       String
  telefone    String
  empresaId   Int
  empresa     Empresa @relation(fields: [empresaId], references: [id])
}

model Colaborador {
  id               Int                @id @default(autoincrement())
  nomeCompleto     String
  dataDeNascimento DateTime
  email            String             @unique
  tel              String
  senha            String?
  empresaId        Int
  avatar           String?
  empresa          Empresa            @relation(fields: [empresaId], references: [id])
  servicos         Servico[]
  GestaoFinanceira GestaoFinanceira[]
}

model ServicoConfig {
  id         Int           @id @default(autoincrement())
  nome       String        @unique
  tipo       TipoDeServico
  preco      Float
  ativo      Boolean       @default(true)
  comissao   Float

  empresaId Int
  empresa   Empresa @relation(fields: [empresaId], references: [id])

  servicosRealizados Servico[]
}

enum TipoDeServico {
  Pacote
  Simples
}

enum Role {
  USER
  ADMIN
}
